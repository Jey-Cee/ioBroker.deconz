{
      "i18n": true,
      "type": "panel",
      "items": {
        "bridge": {
          "newLine": true,
          "label": "deConz Address",
          "type": "text",
          "xl": 3,
          "lg": 3,
          "md": 4,
          "sm": 12,
          "xs": 12
        },
        "port": {
          "label": "Bridge port",
          "type": "number",
          "default": 80,
          "min": 1,
          "max": 65535,
          "xl": 1,
          "lg": 2,
          "md": 2,
          "sm": 6,
          "xs": 6
        },
        "websocketport": {
          "label": "Websocket Port",
          "type": "number",
          "default": 443,
          "min": 1,
          "max": 65535,
          "xl": 1,
          "lg": 2,
          "md": 2,
          "sm": 6,
          "xs": 6
        },
        "_header1": {
          "type": "header",
          "text": "Authentication",
          "size": 3,
          "newLine": true
        },
        "_instruction": {
          "type": "staticText",
          "text": "Instruction",
          "xl": 8,
          "lg": 12,
          "md": 12,
          "sm": 12,
          "xs": 12,
          "newLine": true,
          "style": { "color": "black", "font-size": "16px",  "text-align": "center", "background-color":  "rgb(224, 224, 224)", "radiusBorder":  "3px", "padding": "10px"}
        },
        "user": {
          "label": "API key",
          "type": "text",
          "xl": 4,
          "lg": 6,
          "md": 6,
          "sm": 12,
          "xs": 12,
          "newLine": true
        },
        "create": {
          "type": "sendTo",
          "label": "Create API key",
          "variant": "contained",
          "showProcess": true,
          "command": "createAPIkey",
          "jsonData": "{ \"host\": \"${data.bridge}\", \"credentials\": \"null\"}",
          "useNative": true,
          "xl": 2,
          "lg": 3,
          "md": 3,
          "sm": 12,
          "xs": 12
        },
        "deleteAPIkey": {
          "type": "sendTo",
          "label": "Delete API key",
          "variant": "outlined",
          "showProcess": true,
          "command": "deleteAPIkey",
          "useNative": true,
          "xl": 2,
          "lg": 3,
          "md": 3,
          "sm": 12,
          "xs": 12
        },
        "_or": {
          "type": "staticText",
          "text": "OR",
          "xl": 8,
          "lg": 12,
          "md": 12,
          "sm": 12,
          "xs": 12,
          "newLine": true,
          "style": { "color": "black", "font-size": "16px",  "text-align": "center", "background-color":  "rgb(224, 224, 224)", "radiusBorder":  "3px", "padding": "10px"}
        },
        "username": {
          "label": "Username",
          "type": "text",
          "xl": 3,
          "lg": 4,
          "md": 4,
          "sm": 12,
          "xs": 12,
          "newLine": true
        },
        "password": {
          "label": "Password",
          "type": "password",
          "xl": 3,
          "lg": 4,
          "md": 4,
          "sm": 12,
          "xs": 12
        },
        "userCredentials": {
          "type": "sendTo",
          "label": "Create API key",
          "variant": "contained",
          "showProcess": true,
          "command": "createAPIkey",
          "jsonData": "{ \"host\": \"${data.bridge}\", \"credentials\": \"${data.username}:${data.password}\"}",
          "useNative": true,
          "xl": 2,
          "lg": 4,
          "md": 4,
          "sm": 12,
          "xs": 12
        }
      }
}